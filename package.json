{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "A simple Electron application.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^13.0.0",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "com.example.my-electron-app",
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "msi"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/my-electron-app.git"
  },
  "author": "Your Name",
  "license": "UNLICENSED"
}
